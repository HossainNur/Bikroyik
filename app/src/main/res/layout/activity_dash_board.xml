<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.activity.DashBoardActivity">


    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar_dashboard1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6fbbd3"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/todayExpenseTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="আজকের হিসাব"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                   />

                <TextView
                    android:id="@+id/todaySale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট বিক্রি : "
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/todayDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="মোট জমা : "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/todayDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট বাকি : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/todayExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট ব্যয় : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6fbbd3"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp">

                <TextView
                    android:id="@+id/currentYear"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="বর্তমান বছর"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/yearSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট বিক্রি : "
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/yearDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="মোট জমা : "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/yearDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট বাকি : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/yearExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট ব্যয় : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6fbbd3"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/currentMonth"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="বর্তমান মাস"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/monthSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট বিক্রি : "
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monthDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="মোট জমা : "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/monthDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট বাকি : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/monthExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট ব্যয় : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6fbbd3"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="16dp">

                <TextView
                    android:id="@+id/totalBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="সর্বমোট বিল "
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/totalSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট বিক্রি : "
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/totalDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:text="মোট জমা : "
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/totalDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট বাকি : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/totalExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="মোট ব্যয় : "
                    android:layout_marginTop="5dp"
                    android:textSize="16sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>





</LinearLayout>