<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityBill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activity.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="@color/jet"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:hint="name "
                android:inputType="text"
                android:paddingStart="11dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Name is required"
                android:textColor="@color/red_primary_dark"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/orgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Organization Name "
                android:textColor="@color/jet"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/editOrg"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:drawablePadding="8dp"
                android:elevation="6dp"
                android:hint="organization name"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="11dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/organization_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Organization Name is required"
                android:textColor="@color/red_primary_dark"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/storeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Store Count"
                android:textColor="@color/jet"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editStore"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:drawablePadding="8dp"
                android:elevation="6dp"
                android:hint="store count"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="11dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/store_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Store Count required"
                android:textColor="@color/red_primary_dark"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/businessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Business Type"
                android:textColor="@color/jet"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple_700"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerBuisnessType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:textSize="16sp" />

            </RelativeLayout>



            <TextView
                android:id="@+id/packageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Package"
                android:textColor="@color/jet"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/purple_700"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerPackage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_block"
                    android:prompt="@string/market_id"
                    android:spinnerMode="dropdown"
                    android:textSize="16sp" />

            </RelativeLayout>



            <TextView
                android:id="@+id/mobileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"
                android:textColor="@color/jet"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editMobile"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:drawablePadding="8dp"
                android:elevation="6dp"
                android:hint="mobile number"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="11dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mobile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Mobile Number is required"
                android:textColor="@color/red_primary_dark"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/addressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/jet"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/edit_background"
                android:drawablePadding="8dp"
                android:elevation="6dp"
                android:hint="address"
                android:inputType="text"
                android:padding="2dp"
                android:paddingStart="11dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Address is required"
                android:textColor="@color/red_primary_dark"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/savebtnId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorPrimary"
                android:padding="11dp"
                android:text="save"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </ScrollView>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar1"
            layout="@layout/toolbar_signup" />

    </RelativeLayout>


</RelativeLayout>