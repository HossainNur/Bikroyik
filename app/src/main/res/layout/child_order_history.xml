<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="3dp"
    android:background="@color/white_5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:text="Date"
        android:layout_marginRight="3dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_client_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:text="Client Name"
        android:layout_marginRight="3dp"
        app:layout_constraintStart_toEndOf="@+id/tv_date"
        app:layout_constraintEnd_toStartOf="@id/tv_order_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:text="Order Id"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/btn_gotoOrderArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="1"
        />

    <ImageView
        android:id="@+id/btn_gotoOrderArrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2.5dp"
        android:minWidth="80dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ic_double_arrow_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>